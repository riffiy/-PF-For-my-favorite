<div class="container text-center mt-5">
  <div class="row">
    
    <div class="col">
      <%= image_tag @list.get_image(400,300) %>
    </div>
    
    <div class="col">
      <div class="listbox">
        <span class="box-title">Level:1(Goal)</span>
        <p><%= safe_join(@list.goal.split("\n"),tag(:br)) %></p>
      </div>
      
      <div class="listbox">
        <span class="box-title">Level:2(Relation)</span>  
        <p><%= safe_join(@list.relation.split("\n"),tag(:br)) %></p>
      </div>
      
      <div class="listbox">
        <span class="box-title">Level:3(Routine)</span>
       <p><%= safe_join(@list.routine.split("\n"),tag(:br)) %></p>
      </div>
      
      <div class="listbox">
        <span class="box-title">Level:4(Task)</span>
        <p><%= safe_join(@list.task.split("\n"),tag(:br)) %></p>
      </div>
      
      <div class="listbox-in">
        <%= link_to 'BACK', lists_path, class:"link-info" %>
        <%= link_to 'EDIT', edit_list_path, class:"link-info" %>
        <%= link_to 'DELETE', list_path, method: :delete, class:"link-info" %>
      </div>
    </div>
    
  </div>
</div>





