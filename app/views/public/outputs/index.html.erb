<h1>アウトプット投稿</h1>
  <%= form_with model: @output do |f| %>
    <h4>投稿文</h4>
      <%= f.text_area :post %>
    <h4>タグ</h4>
      <%#= f.text_area :task_name %>
    <%= f.submit '投稿' %>
  <% end %>
  
<h1>投稿一覧</h1>
<% @outputs.each do |output| %>
<div id="colections_buttons_<%= @output.id %>">
  <%#= render 'public/colections/colection', output: @output %>
</div>
<div>
  <%= link_to output_path(output.id) do %>
    <p>投稿<%= output.post %></p>
  <% end %>
  <p>タグ<%#= tag.name %></p>
</div>
<% end %>
